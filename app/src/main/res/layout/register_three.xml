<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterThree"
    android:layout_marginTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtVcontrasena1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ContraseÃ±a:"
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/txtVcontrasena2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevamente:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="90dp"
                />




        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etxtContrasena1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:maxLength="16"
                android:password="true"
                />

            <EditText
                android:id="@+id/etxtContrasena2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:maxLength="16"
                android:password="true"
                android:layout_marginLeft="50dp"
                />

        </LinearLayout>
        <Button
            android:id="@+id/registrarNuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Registrar"
            android:textColor="@color/icons"
            />
    </LinearLayout>
</RelativeLayout>